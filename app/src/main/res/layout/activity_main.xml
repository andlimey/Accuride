<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/background_image"
        android:padding="0dp"
        android:scaleType="center"
        android:src="@drawable/background"
        tools:background="@android:color/background_light" />

    <AutoCompleteTextView
        android:id="@+id/from_box"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@android:color/white"
        android:completionThreshold="1"
        android:hint="@string/from" />

    <AutoCompleteTextView
        android:id="@+id/to_box"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:background="@android:color/white"
        android:completionThreshold="1"
        android:hint="@string/to" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:text="@string/go" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/from_box"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:visibility="visible" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/to_box"
        android:layout_marginEnd="35dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp" >

    </SearchView>

    <ImageButton
        android:id="@+id/announcement_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/from_box"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:contentDescription="@string/announcement_button"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        android:layout_alignRight="@+id/from_box" />

</RelativeLayout>