                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="tab1endStation3"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <!-- Start Circle 3 -->
                <ImageView
                    android:id="@+id/tab1startCircle3"
                    android:layout_width="57dp"
                    android:layout_height="38dp"
                    android:layout_toRightOf="@id/tab1startStation3"
                    android:layout_alignBottom="@id/tab1startStation3"
                    app:srcCompat="@mipmap/circle" />

                <!-- End Circle 3 -->
                <ImageView
                    android:id="@+id/tab1endCircle3"
                    android:layout_width="57dp"
                    android:layout_height="39dp"
                    android:layout_toLeftOf="@+id/tab1endStation3"
                    android:layout_alignBottom="@id/tab1endStation3"
