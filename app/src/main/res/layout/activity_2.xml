                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:text="-1"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

