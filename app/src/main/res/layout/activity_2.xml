<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/linear_layout"
    tools:context=".Activity2">

    <!-- Title of Application goes into this layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/accurideTitle"
        android:background="#CECECE"
        android:layout_weight="1">

        <!-- Title of Application -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Accuride SG"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <!-- Start and Destination strings go here -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/journeyDetails"
        android:layout_weight="1">

        <!-- Dash -->
        <TextView
            android:id="@+id/dash"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/dash"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="visible" />

        <!-- Start String -->
        <TextView
            android:id="@+id/start_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/dash"
            android:layout_toStartOf="@id/dash"
            android:gravity="center"
            android:text="@string/start_string"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_alignParentLeft="true" />

        <!-- Destination String -->
        <TextView
            android:id="@+id/destination_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/start_string"
            android:layout_toEndOf="@id/dash"
            android:layout_toRightOf="@id/dash"
            android:gravity="center"
            android:text="@string/destination_string"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <!-- Tab Host containing Fastest and Least Transfers are here -->
